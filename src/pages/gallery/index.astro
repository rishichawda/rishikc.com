---
import BaseLayout from "../../layouts/base_layout.astro";
import "../../styles/global.css";
import GalleryGrid from "../../components/gallery/gallery_grid.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { Schema } from "astro-seo-schema";
import type { ListItem, ImageGallery as SchemaImageGallery } from "schema-dts"; // Import types
import logo from "../../../content/assets/logo/Group 489.svg";

// Define interfaces needed for profile data
interface Social { platform: string; url: string; }
interface ProfileData { name: string; socials: Social[]; /* Add other fields if needed */ }

// Fetch profile data
const profileEntry = await getCollection("profile");
const profile = profileEntry[0].data as ProfileData;

// Find the Instagram social link
const instagramSocial = profile.socials.find(social => social.platform.toLowerCase() === 'instagram');

const page_info = {
  title: `Gallery - ${profile.name}`, // Use profile name
  description:
    `Photography portfolio showcasing various projects and moments captured by ${profile.name}`, // Use profile name
  image: "/favicon.svg",
  keywords: `photography, portfolio, gallery, ${profile.name}`, // Use profile name
};

// Get gallery collection for structured data
const galleries = await getCollection("gallery");
const pageUrl = new URL(
  Astro.url.pathname,
  Astro.site || "https://rishikc.com",
).toString();

// Create gallery items for JSON-LD
const galleryItems = galleries.map((gallery) => {
  // Ensure the object conforms to ImageGallery type expected by ListItem
  const gallerySchema: SchemaImageGallery = {
    "@type": "ImageGallery",
    name: gallery.data.title,
    description: gallery.data.description,
    url: new URL(
      `/gallery/${gallery.data.directory}/`,
      Astro.site || "https://rishikc.com",
    ).toString(),
    // Add other required ImageGallery properties if necessary, e.g., image
    image: new URL(
      gallery.data.featured_image.src, // Assuming featured_image has a src property
      Astro.site || "https://rishikc.com",
    ).toString(),
  };
  return gallerySchema;
});

// Explicitly type the itemListElement array
const itemListElements: ListItem<SchemaImageGallery>[] = galleryItems.map((gallerySchema, index) => ({
  "@type": "ListItem",
  position: index + 1,
  item: gallerySchema,
}));
---

<BaseLayout page_info={page_info}>
  <!-- CollectionPage JSON-LD Schema for Gallery Index -->
  <Schema
    slot="head"
    item={{
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      name: "Photography Gallery",
      description: page_info.description,
      mainEntity: {
        "@type": "ItemList",
        itemListElement: itemListElements, // Use the explicitly typed array
      },
      author: {
        "@type": "Person",
        name: profile.name, // Use profile name
        url: "https://rishikc.com",
        sameAs: profile.socials.map((social: Social) => social.url), // Use fetched socials
      },
      url: pageUrl,
    }}
  />
  <main
    class="font-['Red_Hat_Display_Variable'] min-h-screen bg-brand-100/[0.12]"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 pt-10">
      <a
        href="/"
        class="inline-flex items-center text-brand-800/90 hover:text-brand-950 mb-20 group text-[15px] tracking-[0.2em] uppercase transition-colors duration-300"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 mr-3 group-hover:-translate-x-1 transition-transform"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Home
      </a>

      <div
        class="flex flex-col md:flex-row items-center justify-around text-center mb-20"
      >
        <div class="basis-1/3 lg:basis-2/5">
          <Image
            alt="logo"
            src={logo}
            transition:name="hero-logo-image"
            class="mx-auto max-w-[80%]"
          />
        </div>
        <div class="basis-2/3 lg:3/5">
          <h1
            class="text-4xl lg:text-5xl font-light text-brand-950 mb-8 tracking-[-0.02em] leading-tight"
          >
            Photography Gallery
          </h1>
          <p
            class="text-brand-800/90 text-xl leading-relaxed font-light max-w-2xl mx-auto tracking-wide"
          >
            Explore my collection of photography projects, from street
            photography to portrait sessions.
          </p>
          {/* Add Instagram Link */}
          {instagramSocial && (
            <a
              href={instagramSocial.url}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center mt-6 text-sm text-brand-700 hover:text-brand-900 transition-colors duration-300 group font-['Montserrat_Variable']"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 opacity-80 group-hover:opacity-100 transition-opacity" viewBox="0 0 24 24" fill="currentColor"> <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/> </svg>
              Follow me on Instagram
              <span class="inline-block ml-1 transition-transform duration-300 group-hover:translate-x-1">&rarr;</span>
            </a>
          )}
        </div>
      </div>
      <GalleryGrid />
    </div>
  </main>
</BaseLayout>
