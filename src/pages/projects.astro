<script>
    // Enhanced scroll animations with Intersection Observer
    document.addEventListener("DOMContentLoaded", () => {
        const observerOptions = {
            threshold: 0.1,
            rootMargin: "0px 0px -50px 0px",
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add("fade-in-up");
                    }, index * 100);
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observe all project cards and sections
        const animatedElements = document.querySelectorAll(
            "article, section > div",
        );
        animatedElements.forEach((el) => {
            observer.observe(el);
        });

        // Parallax effect for background elements
        window.addEventListener("scroll", () => {
            const scrolled = window.pageYOffset;
            const backgrounds = document.querySelectorAll(".parallax-bg");

            backgrounds.forEach((bg) => {
                const element = bg as HTMLElement;
                const speed = element.dataset.speed || "0.5";
                element.style.transform = `translateY(${scrolled * parseFloat(speed)}px)`;
            });
        });

        // Enhanced button interactions
        const buttons = document.querySelectorAll('a[class*="group"]');
        buttons.forEach((button) => {
            const element = button as HTMLElement;

            button.addEventListener("mouseenter", () => {
                element.style.transform = "translateY(-2px) scale(1.05)";
            });

            button.addEventListener("mouseleave", () => {
                element.style.transform = "translateY(0) scale(1)";
            });
        });
    });

    // Re-initialize animations on Astro page transitions
    document.addEventListener("astro:page-load", () => {
        // Repeat the same initialization logic for Astro's client-side routing
        const observerOptions = {
            threshold: 0.1,
            rootMargin: "0px 0px -50px 0px",
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add("fade-in-up");
                    }, index * 100);
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        const animatedElements = document.querySelectorAll(
            "article, section > div",
        );
        animatedElements.forEach((el) => {
            observer.observe(el);
        });
    });
</script>
