---
import SEO from "../components/seo.astro";
import "../styles/global.css";
import "@fontsource-variable/inter";
import "@fontsource-variable/red-hat-display";
import "@fontsource-variable/red-hat-text";
import "@fontsource-variable/montserrat";
import { getCollection } from "astro:content";
import Footer from "../components/Footer.astro";

const logo = await getCollection('logo')

console.log(logo)

let {
	page_info: { title, description, image, keywords },
} = Astro.props;

const seo = {
	title: title || "title",
	// title: title || defaultSiteMetadata.title,
	description: description || "description",
	// description: description || defaultSiteMetadata.description,
	image: `siteUrl${image || "image"}`,
	// image: `${defaultSiteMetadata.siteUrl}${image || icon}`,
	type: "WebSite",
	// type: type || "WebSite",
	keywords: keywords || "keywords",
};
---

<!doctype html>
<html lang="en">
	<SEO page_info={seo} />
	<body>
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
