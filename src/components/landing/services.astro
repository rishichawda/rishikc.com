---
import { getCollection } from 'astro:content';

const servicesData = await getCollection('services');
const services = servicesData[0]?.data || [];
---

<section id="services" class="py-16 sm:py-20 lg:py-24 bg-gradient-to-b from-gray-50/50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-['Red_Hat_Display_Variable'] font-light text-gray-900 mb-4">
        What I Craft & Create
      </h2>
      <p class="text-lg sm:text-xl text-gray-600 font-['Montserrat_Variable'] font-light max-w-3xl mx-auto">
        Passionate about building meaningful digital experiences through code, design, and storytelling
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {services.map((service: any) => (
        <div class="group bg-white rounded-2xl p-8 shadow-sm border border-brand-100/50 hover:shadow-xl hover:shadow-brand-100/20 transition-all duration-300 hover:-translate-y-1 relative overflow-hidden flex flex-col h-full">
          <!-- Subtle gradient overlay on hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-brand-50/0 to-brand-100/0 group-hover:from-brand-50/1 group-hover:to-brand-100/25 transition-all duration-300 rounded-2xl"></div>
          
          <div class="relative z-10 flex flex-col h-full">
            <div class="flex items-center mb-6">
              <div class="bg-brand-50 rounded-xl p-3 mr-4 group-hover:bg-brand-100 transition-colors duration-300">
                <div class="text-brand-700 group-hover:scale-110 transition-transform duration-300" set:html={service.icon}>
                </div>
              </div>
              <h3 class="text-xl sm:text-2xl font-['Red_Hat_Display_Variable'] font-medium text-gray-900 group-hover:text-brand-600 transition-colors">
                {service.title}
              </h3>
            </div>
            
            <p class="text-gray-600 font-['Montserrat_Variable'] font-light leading-relaxed mb-6 text-base flex-grow">
              {service.description}
            </p>
            
            <a
              href={service.link}
              class="inline-flex items-center text-brand-700 hover:text-brand-600 font-['Montserrat_Variable'] font-medium text-sm transition-all duration-200 group-hover:translate-x-1"
              target={service.link.startsWith('http') ? '_blank' : undefined}
              rel={service.link.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              {service.linkText}
              <svg
                class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section> 
