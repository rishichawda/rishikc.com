---
import { Image } from "astro:assets";

const navItems = [
  { label: "articles", path: "/articles/" },
  { label: "gallery", path: "/gallery/" },
];
import logo from "../../../content/assets/logo/Group 489.svg";
---

<section
  class="relative max-w-[1319px] rounded-b-3xl w-full min-h-[617px] mx-auto overflow-hidden px-4 sm:px-6 lg:px-8 pb-8 lg:pb-0"
>
  <div class="absolute inset-0 flex">
    <div class="w-0 lg:w-1/2 bg-[#98a5db]/[0.88]"></div>
    <div class="w-full lg:w-1/2 bg-[#8592c8]"></div>
  </div>

  <div class="relative z-10 pt-4">
    <div class="flex justify-between items-center gap-4">
      <div
        class="max-w-fit text-white font-['Inter Variable'] text-sm h-[2.3125rem] flex justify-center items-center rounded-lg"
      >
        <Image alt="logo" width={40} class="max-h-auto max-w-10" src={logo} />
      </div>
      <nav class="flex flex-wrap justify-center gap-1 md:gap-4 items-center">
        {
          navItems.map((item) => (
            <a
              href={item.path}
              class="capitalize flex justify-center items-center px-3 md:px-4 h-[2.3125rem] rounded-lg text-white font-['Red_Hat_Display_Variable'] text-sm tracking-wide hover:bg-white/10 hover:cursor-pointer transition-colors focus:outline-none focus:ring-2 focus:ring-white/50"
              aria-label={`Navigate to ${item.label}`}
            >
              {item.label}
            </a>
          ))
        }

        <div class="relative">
          <button
            id="search-icon-btn"
            class="flex justify-center items-center px-3 md:px-4 h-[2.3125rem] rounded-lg text-white hover:bg-white/10 hover:cursor-pointer transition-colors focus:outline-none focus:ring-2 focus:ring-white/50"
            aria-label="Open search"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m21 21-6-6m2-5a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"></path>
            </svg>
          </button>

          <form
            id="search-form"
            method="GET"
            action="/search/"
            class="absolute right-0 top-full mt-2 hidden z-50"
          >
            <div
              class="flex items-center gap-2 bg-white/95 backdrop-blur-sm rounded-lg p-2 shadow-lg border border-white/20 min-w-[280px]"
            >
              <input
                type="text"
                name="q"
                id="search-input"
                placeholder="Search articles, gallery..."
                class="flex-1 px-3 py-2 text-sm border-0 bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none font-['Montserrat_Variable']"
                autocomplete="on"
              />
              <button
                type="submit"
                class="bg-brand-600 hover:bg-brand-700 text-white p-2 rounded-md transition-colors duration-200 flex-shrink-0"
                aria-label="Search"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m21 21-6-6m2-5a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"></path>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </nav>
    </div>
  </div>

  <div
    class="relative z-10 flex flex-col lg:flex-row justify-between items-center gap-8 lg:gap-12 mt-12 lg:mt-16"
  >
    <div class="w-full lg:w-[520px] space-y-6 order-1">
      <h1
        class="font-['Red_Hat_Display_Variable'] text-3xl sm:text-3xl lg:text-[2rem] font-light text-white leading-snug"
      >
        Welcome to <span class="font-semibold">Rishi</span>'s personal corner on
