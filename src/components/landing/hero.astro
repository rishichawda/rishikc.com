---
import { Image } from "astro:assets";

const navItems = [
  { label: "articles", path: "/articles/" },
  { label: "gallery", path: "/gallery/" },
];
import logo from "../../../content/assets/logo/Group 489.svg";
---

<section
  class="relative max-w-[1319px] rounded-b-3xl w-full min-h-[617px] mx-auto overflow-hidden px-4 sm:px-6 lg:px-8 pb-8 lg:pb-0"
>
  <!-- Enhanced background with subtle patterns -->
  <div class="absolute inset-0 flex">
    <div class="w-0 lg:w-1/2 bg-[#98a5db]/[0.88] relative">
      <!-- Subtle pattern overlay -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
      </div>
    </div>
    <div class="w-full lg:w-1/2 bg-[#8592c8] relative">
      <!-- Gradient overlay for depth -->
      <div class="absolute inset-0 bg-gradient-to-br from-[#8592c8] via-[#7485c1] to-[#6878ba] opacity-80"></div>
      <!-- Floating particles effect -->
      <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-white/20 rounded-full animate-float-1"></div>
        <div class="absolute top-3/4 left-3/4 w-1 h-1 bg-white/30 rounded-full animate-float-2"></div>
        <div class="absolute top-1/2 left-1/2 w-1.5 h-1.5 bg-white/15 rounded-full animate-float-3"></div>
      </div>
    </div>
  </div>

  <div class="relative z-10 pt-4">
    <div class="flex justify-between items-center gap-4">
      <div
        class="max-w-fit text-white font-['Inter Variable'] text-sm h-[2.3125rem] flex justify-center items-center rounded-lg group"
      >
        <Image 
          alt="Rishi Chawda Logo" 
          width={40} 
          class="max-h-auto max-w-10 group-hover:scale-110 transition-transform duration-300" 
          src={logo} 
        />
      </div>
      <nav class="flex flex-wrap justify-center gap-1 md:gap-4 items-center">
        {
          navItems.map((item) => (
            <a
              href={item.path}
              class="capitalize flex justify-center items-center px-3 md:px-4 h-[2.3125rem] rounded-lg text-white font-['Red_Hat_Display_Variable'] text-sm tracking-wide hover:bg-white/15 backdrop-blur-sm border border-transparent hover:border-white/20 hover:cursor-pointer transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/50 group"
              aria-label={`Navigate to ${item.label}`}
            >
              <span class="group-hover:scale-105 transition-transform duration-300">
                {item.label}
              </span>
            </a>
          ))
        }

        <div class="relative">
          <button
            id="search-icon-btn"
            class="flex justify-center items-center px-3 md:px-4 h-[2.3125rem] rounded-lg text-white hover:bg-white/15 backdrop-blur-sm border border-transparent hover:border-white/20 hover:cursor-pointer transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/50 group"
            aria-label="Open search"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4 group-hover:scale-110 transition-transform duration-300"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m21 21-6-6m2-5a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"></path>
            </svg>
          </button>

          <form
            id="search-form"
            method="GET"
            action="/search/"
            class="absolute right-0 top-full mt-2 hidden z-50"
          >
            <div
              class="flex items-center gap-2 bg-white/95 backdrop-blur-sm rounded-xl p-3 shadow-xl border border-white/30 min-w-[320px]"
            >
              <input
                type="text"
                name="q"
                id="search-input"
                placeholder="Search articles, gallery..."
                class="flex-1 px-3 py-2 text-sm border-0 bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none font-['Montserrat_Variable']"
                autocomplete="on"
              />
              <button
                type="submit"
                class="bg-brand-600 hover:bg-brand-700 text-white p-2.5 rounded-lg transition-colors duration-200 flex-shrink-0 hover:scale-105 transform"
                aria-label="Search"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-4 w-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m21 21-6-6m2-5a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"></path>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </nav>
    </div>
  </div>

  <div
    class="relative z-10 flex flex-col lg:flex-row justify-between items-center gap-8 lg:gap-12 mt-12 lg:mt-16"
  >
    <div class="w-full lg:w-[520px] space-y-6 order-1 animate-fade-in-up">
      <div class="space-y-4">
        <h1
          class="font-['Red_Hat_Display_Variable'] text-3xl sm:text-3xl lg:text-4xl font-light text-white leading-tight tracking-tight"
        >
          Welcome to <span class="font-semibold bg-gradient-to-r from-white to-white/80 bg-clip-text">Rishi</span>'s
          <br class="hidden sm:block">
          <span class="text-white/90 font-light">personal corner on the Internet</span>
        </h1>
      </div>

      <div class="space-y-5 font-['Montserrat_Variable'] leading-relaxed">
        <p class="text-white/90 text-lg font-light leading-relaxed">
          Senior Software Engineer at <span class="font-medium text-white">Progress Chef</span>, crafting 
          <span class="font-medium text-white">DevSecOps solutions</span> that bridge development and security. 
          Passionate about building resilient systems and exploring the endless possibilities of code.
        </p>

        <p class="text-white/80 font-light leading-relaxed">
          Currently open to <span class="font-medium text-white/90">freelance collaborations</span> and 
          <span class="font-medium text-white/90">open source adventures</span>. Let's create something extraordinary together!
        </p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4 pt-2">
        <a
          href="/about/"
          class="font-['Montserrat_Variable'] text-sm inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-lg border border-white/20 text-white font-medium group hover:bg-white/20 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-white/50 w-fit"
          aria-label="Learn more about Rishi"
        >
          <span>Learn more about me</span>
          <svg
            class="group-hover:translate-x-1 transition-transform duration-300 w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </a>
        
        <a
          href="/career/"
          class="font-['Montserrat_Variable'] text-sm inline-flex items-center gap-2 text-white/80 hover:text-white font-light transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-white/50 rounded w-fit group"
          aria-label="View Rishi's career journey"
        >
          <span>View career journey</span>
          <svg
            class="group-hover:translate-x-1 transition-transform duration-300 w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </a>
      </div>
    </div>

    <div
      class="hidden lg:flex lg:order-1 xl:order-2 flex-col h-[90%] items-center justify-center relative animate-fade-in-scale"
    >
      <div class="relative">
        <Image 
          alt="Rishi Chawda Logo" 
          src={logo} 
          transition:name="hero-logo-image"
          class="relative z-10 drop-shadow-lg"
        />
      </div>
    </div>

    <div
